        <GroupBox Header="ADD PRODUCT " FontFamily="Verdana" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="236" Width="444" Grid.RowSpan="2">
            <Grid Margin="0,0,0,-1" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*"/>
                    <ColumnDefinition Width="47*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Product ID :" HorizontalAlignment="Left" Margin="40,43,0,0" VerticalAlignment="Top" Width="100" FontFamily="Verdana" Grid.ColumnSpan="2"/>
